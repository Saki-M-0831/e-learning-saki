<section class="container mt-4">
    <div class="row">
        <div class="col-4 text-center position-fixed">
            <div class="card">
                <div class="card-body p-2 px-4 profile-bg">
                    <% if @user.picture? %>
                        <%= image_tag @user.picture.url, class: "rounded-circle mt-3", :size => "100x100" %>
                    <% else %>
                        <%= image_tag "https://cdn.pixabay.com/photo/2017/01/10/03/54/icon-1968236__480.png", class: "rounded-circle", :size => "100x100" %>
                    <% end %>
                    <h1 class="pb-3"><%= @user.name %></h1>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            <%= link_to @user.followers.count, followers_user_path(@user), class: "text-primary" %>
                            <p>Followers</p>
                        </div>
                        <div class="col-6">
                            <%= link_to @user.followings.count, followings_user_path(@user), class: "text-primary" %>
                            <p>Followings</p>
                        </div>
                    </div>
                    <hr>
                    <h5><%= current_user.word_learned.count %></h5>
                    <p>words learned</p>
                </div>
            </div>
        </div>     
        <div class="col-7 mt-2 ml-auto">
            <h2>Activity</h2>
            <hr>
            <%= render "activities" %>
            <hr>  
        </div>   
    </div>
</section>

<div class="col-2 mt-5 mx-auto pl-5">
    <%= will_paginate @activities %>
</div>
