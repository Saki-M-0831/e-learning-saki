<h1 class="text-center my-5"> <%= @lesson.category.title %> </h1>

<section class="container">
    <section class="col-8 mx-auto">
        <section class="card mx-5">
            <div class="card-header py-1">
                <div class="col-3 text-right float-right">
                    <%= link_to "back", categories_path, class: "text-right mr-2" %>
                </div>
            </div>
            <div class="card-body text-center mx-5">
                <%= form_for ([@lesson, @answer]) do |f| %>
                    <h3 class="mb-4 mt-2 text-success"> <%= @word.content %> </h3>
                    <% @word.choices.each do |choice| %>
                        <%= f.hidden_field :word_id, value: @word.id %>
                        <%= f.hidden_field :choice_id, value: choice.id %>
                        <%= f.submit choice.content, class:"btn btn-outline-primary btn-block mb-1" %>
                    <% end %>
                    <div class="col-3 ml-auto text-right mt-4">
                        <h3 class="text-muted"><span class="text-success"><%= @lesson.words.count + 1 %></span>/<%= @lesson.category.words.count %> </h3>
                    </div>
                <% end %>
            </div>
        </section>
    </section> 
</section>
