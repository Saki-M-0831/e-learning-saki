<h1 class="text-center my-4">Manage Categories</h1>

<div class="mx-5 mb-3">
    <%= link_to "Back to Admin", admin_pages_home_path, class: "btn btn-outline-primary ml-3" %>
</div>

<section class="card mx-5">
    <div class="card-header py-2">
        <div class="col-2 float-right">
            <%= link_to "Create New", new_admin_category_path, class: "btn btn-success" %>
        </div>  
    </div>
    <div class="card-body text-left py-2">
        <div class="row">
            <div class="col-3"><h5>Title</h5></div>
            <div class="col-5"><h5>Description</h5></div>
            <div class="col-1"><h5>Words</h5></div>
            <div class="col-3"><h5>Action</h5></div>
        </div>   
    </div>
</section>
<% @categories.each do |category| %>
    <section class="card mx-5">
        <div class="card-body text-left py-2">
            <div class="row">
                <div class="col-3">
                    <%= link_to category.title, admin_category_words_path(category) %>
                </div>
                <div class="col-5">
                    <%= category.description %>
                </div>
                <div class="col-1 text-center">
                    <%= category.words.count %>
                </div>
                <div class="col-3">
                    <div class="row">
                        <div class="col-5 px-0">
                            <%= link_to "Add Words", new_admin_category_word_path(category), class: "btn btn-primary" %>
                        </div>
                        <div class="col-3 pl-0">
                            <%= link_to "Edit", edit_admin_category_path(category), class: "btn btn-warning" %>
                        </div>
                        <div class="col-2">
                            <%= button_to "Delete", admin_category_path(category), method: :delete, data: {confirm: "You really want to delete this category?"}, class: "btn btn-outline-danger" %>
                        </div>
                    </div>   
                </div>
            </div>   
        </div>
    </section>
<% end %>  

<div class="col-2 mt-5 mx-auto pl-5">
    <%= will_paginate @followers %>
</div>
