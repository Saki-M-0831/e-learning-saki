<% if @category.errors.any? %>
    <div class="alert alert-danger text-danger" role="alert">
        <p> The form contains <%= pluralize(@category.errors.count, "error") %> </p>
        <hr>
        <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li><%= msg %> </li>
            <% end %>
        </ul>
    </div>
    
<% end %>