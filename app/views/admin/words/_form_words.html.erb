<%= form_for([:admin, @category, @word]) do |f| %>
    <%= render "error_messages" %>
    <div class="row mx-5 mt-3">
        <div class="col-4 text-right">
            <%= f.label :word, class: "font-weight-bold" %>
        </div>
        <div class="col-5">
            <%= f.text_field :content, class: "form-control" %>
        </div>
    </div>
    <div class="row mx-5 mt-4">
        <div class="col-4 text-right">
            <%= f.label :choices, class: "font-weight-bold" %>
        </div>  
        <div class="col-8">
            <%= f.fields_for :choices do |choice| %>  
                <div class="row">
                    <div class="col-7">
                        <%= choice.text_field :content, class: "form-control" %> 
                    </div>
                    <div class="col-2 pr-0 mb-3">
                        <%= choice.label :correct %>
                        <%= choice.check_box :is_correct %>
                    </div> 
                </div> 
            <% end %>    
        </div>   
    </div>
        
    <div class="row mx-5 mt-3">
        <div class="col-1 m-auto">
            <%= f.submit btn_name, class: "btn btn-outline-success" %>
        </div>
    </div>
<% end %>