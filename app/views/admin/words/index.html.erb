<h1 class="text-center mt-4"> <%= @category.title %> </h1>
<p class="text-center mb-4"> <%= @category.description %> </p>

<div class="mx-auto my-3">
    <%= link_to "New Words", new_admin_category_word_path(@category), method: :get, class: "btn btn-outline-primary font-weight-bold h2" %>
</div>
<section class="container">
    <section class="card mx-5">
        <div class="card-body text-left py-2">
            <div class="row mx-5">
                <div class="col-4"><h5>Words</h5></div>
                <div class="col-4"><h5>Answer</h5></div>
                <div class="col-4"><h5>Settings</h5></div>
            </div>   
        </div>
    </section>
    <% @words.each do |word| %>
        <section class="card mx-5">
            <div class="card-body text-left py-2">
                <div class="row mx-5">
                    <div class="col-4">
                        <%= word.content %>
                    </div>
                    <div class="col-4">
                        <%= word.correct_choice %>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-3">
                                <%= link_to "Edit", edit_admin_category_word_path(@category, word), class: "btn btn-warning" %>
                            </div>
                            <div class="col-9">
                                <%= link_to "Delete", admin_category_word_path(@category, word), method: :delete, data: {confirm: "You really want to delete this word?"}, class: "btn btn-outline-danger" %>
                            </div>
                        </div>
                    </div>
                </div>   
            </div>
        </section>
    <% end %>
    <div class="mt-3">
        <%= link_to "Back", admin_categories_path, class: "ml-5" %>
    </div>
</section>
